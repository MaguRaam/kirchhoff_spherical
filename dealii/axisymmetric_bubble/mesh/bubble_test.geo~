// bubble radius:
R = 0.25;
Rn = 10*R;
Rk = 25*R;

// axisymmetri domain:
zmin = -30.0 * R;
zmax = 30.0 * R;
rmin = 0.;
rmax = 30. * R;

//refinement value:
bc = .01;
nc = 0.1;
kc = 0.5;
dc = 1;

// domain boundary points:
Point(1) = {zmin, rmin, 0, dc};
Point(2) = {0, rmin, 0, bc};
Point(3) = {zmax, rmin, 0, dc};
Point(4) = {zmax, rmax, 0, dc};
Point(5) = {0, rmax, 0, dc};
Point(6) = {zmin, rmax, 0, dc};

 
//line connecting domain boundary points:
Line(1) = {1, 2};
Line(2) = {2, 3};
Line(3) = {3, 4};
Line(4) = {4, 5};
